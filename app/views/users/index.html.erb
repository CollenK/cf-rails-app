<div class="container-fluid">
  <div class="col-xs-6 col-xs-offset-3">
  <h1>All Users</h1>

  <table>
    <thead>
      <tr>
        <th>First name</th>
        <th>Last name</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @users.each do |user| %>
        <tr>
          <td><%= user.first_name %></td>
          <td><%= user.last_name %></td>
          <td><%= link_to 'Show', user, class: "btn btn-success btn-sm" %></td>
          <td><%= link_to 'Edit', edit_user_path(user), class: "btn btn-primary btn-sm" %></td>
          <td><%= link_to 'Destroy', user, class: "btn btn-danger btn-sm", method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <br>
  <% if user_signed_in? && current_user.admin? %>
    <%= link_to 'New User', new_user_path, class: "btn btn-primary btn-sm" %>
  <% end %>
  </div>
</div>
