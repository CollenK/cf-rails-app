<div class="product-reviews">
  <% @comments.each do |comment| %>
    <div class="row">
      <hr>
      <p class="text-muted"><%= comment.user.first_name %> <small><em><%= "#{time_ago_in_words(comment.created_at)} ago" %></em></small></p>
      <p><%= "Rating: #{comment.rating} out of 5" %></p>
      <div class="rated" data-score="<%= comment.rating %>"></div>
      <br>
      <p><%= comment.body %></p>
    </div>
  <% end %>
</div>
