<p id="notice"><%= notice %></p>

<h1 class="text-xs-center">All Products</h1>

<div class="container-fluid">
  <div class="row">
    <% @products.each do |product| %>
      <div class="col-xs-12 col-sm-6 col-md-3">
        <div class="card text-xs-center">
          <%= image_tag(product.image_url, class: "card-img-top img-responsive") %>
        <div class="card-block">
          <h4 class="card-title"><%= product.name %></h4>
          <p class="card-text"><%= product.description %></p>
          <p class="card-text"><strong>Color: </strong><%= product.color %></p>
          <p class="card-text"><strong>Price:</strong> $<%= product.price %></p>
        </div>
        <div class="card-block">
          <%= link_to 'Edit', edit_product_path(product), class: 'btn btn-success btn-sm' %>
          <%= link_to 'Destroy', product, class: 'btn btn-danger btn-sm', method: :delete, data: { confirm: 'Are you sure?' } %>
        </div>
        <div class="card-block">
          <%= link_to 'Show', product, class: 'btn btn-primary' %>
        </div>
        </div> <!-- /card -->
      </div> <!-- /col-sm-4 -->
    <% end %>
  </div> <!-- /row -->
<br>
  <div class="row text-xs-center">
    <%= link_to 'New Product', new_product_path, class: 'btn btn-primary' %>
  </div>
</div> <!--/container -->
